mixin serviceItem(props = {})
    -var {classname = '', href="services-detail.html", style='', icon, title, desc} = props
    div(class=`service-item hover-box-shadow ${classname}`)
        if(style=='style-one')
            a(href=`${href}`).service-item-main
                .heading
                    i(class=`${icon}`)
                .desc.mt-24
                    .heading7!= title 
                    .text-placehover.mt-4!= desc 
        if(style=='style-two')
            a(href=`${href}`).service-item-main
                .heading
                    i(class=`${icon}`)
                .desc.mt-24
                    .heading6.text-on-surface!= title 
                    .text-secondary.mt-12!= desc 
                .read.flex-item-center.gap-8.mt-32
                    .text-button.text-on-surface Read more
                    i.ph-light.ph-arrow-right.fs-32.text-on-surface
        if(style=='style-three')
            a(href=`${href}`).service-item-main.flex-column-center.text-center
                .heading.pb-20
                    i(class=`${icon}`)
                .line
                .desc.pt-20
                    .heading5!= title 
                    .body3.mt-8!= desc 
                    u.display-inline-block.fw-700.mt-20 Learn more
        if(style=='style-four')
            a(href=`${href}`).service-item-main
                .heading
                    i(class=`${icon}`)
                .desc.mt-32
                    .heading6!= title 
                    .text-placehover.mt-8!= desc 
        
        